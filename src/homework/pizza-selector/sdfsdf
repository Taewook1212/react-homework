import { pizzaTopping } from '../../data/pizzaData.json';
import { useState } from 'react';

function Exercise() {
  return (
    <div>
      <h2 className="sr-only">토핑 추가선택</h2>
      <FormPizza />
    </div>
  );
}

function FormPizza() {
  const [selectedToppings, setSelectedToppings] = useState([]);

  const handleToggleTopping = (e) => {
    // 이미 선택된 토핑인지 확인
    const { value: toppingName, checked: isChecked } = e.target;
    let nextToppings = [];

    if (isChecked) {
      // 이미 선택된 토핑이면 선택 해제
      nextToppings = [...selectedToppings, toppingName];
    } else {
      // 선택되지 않은 토핑이면 선택 추가
      nextToppings = selectedToppings.filter(
        (tooping) => tooping !== toppingName
      );
    }
    setSelectedToppings(nextToppings);
  };

  const calculateTotalPrice = () => {
    let totalPrice = 0;
    pizzaTopping.map((item) => {
      selectedToppings.forEach((item2) => {
        if (item.title === item2) {
          totalPrice += parseInt(item.price);
        }
      });
    });
    return totalPrice;
  };
  return (
    <div>
      <ul>
        {pizzaTopping.map((item) => {
          return (
            <li key={item.id}>
              <SelectedPizza
                item={item}
                toppings={selectedToppings}
                onToggleTopping={handleToggleTopping}
                totalPrice={calculateTotalPrice}
              />
            </li>
          );
        })}
      </ul>
      <div className="totalPrice border bg-gray-400 rounded-lg p-3 text-center text-white">
        가격 {calculateTotalPrice()} 원
      </div>
    </div>
  );
}

function SelectedPizza({ item, toppings, onToggleTopping }) {
  return (
    <div className="space-y-4 m-3">
      <label className="flex items-center">
        <input
          type="checkbox"
          className="form-checkbox h-5 w-5 text-indigo-600"
          checked={toppings.includes(item.title)}
          value={item.title}
          // 이거 리액트로 조절하는방법, 이거 없으면 그냥 dom 요소 input 태그를 쓴거
          onChange={(e) => onToggleTopping(e)}
        />
        <span className="ml-2 text-gray-700">{item.title} 토핑추가</span>
        <span className="ml-auto price text-gray-700"> +{item.price}원 </span>
      </label>
    </div>
  );
}

export default Exercise;
